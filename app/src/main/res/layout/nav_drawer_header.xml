<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_drawer_header_size"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    android:padding="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/nav_drawer_picture"
            android:layout_width="@dimen/nav_drawer_picture_size"
            android:layout_height="@dimen/nav_drawer_picture_size"
            android:layout_marginBottom="10dp"
            tools:src="@drawable/app_logo" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nav_drawer_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:gravity="bottom"
            android:textColor="@color/whiteText"
            android:textStyle="bold"
            tools:text="John SMITH" />

        <TextView
            android:id="@+id/nav_drawer_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:textColor="@color/whiteText"
            tools:text="john.smith@gmail.com" />

    </LinearLayout>

</LinearLayout>