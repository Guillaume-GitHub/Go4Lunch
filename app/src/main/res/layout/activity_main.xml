<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    tools:context=".MainActivity">

        <ImageView
            android:id="@+id/activity_main_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/app_logo"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <TextView
            android:id="@+id/activity_main_appName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            app:layout_constraintLeft_toLeftOf="@id/activity_main_imageView"
            app:layout_constraintRight_toRightOf="@id/activity_main_imageView"
            app:layout_constraintTop_toBottomOf="@id/activity_main_imageView"
            android:layout_marginTop="20dp"
            android:textSize="50sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_main_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/slogan"
            app:layout_constraintLeft_toLeftOf="@id/activity_main_appName"
            app:layout_constraintRight_toRightOf="@id/activity_main_appName"
            app:layout_constraintTop_toBottomOf="@id/activity_main_appName"
            android:textSize="12sp"
            android:textColor="@color/whiteText"
            android:textStyle="italic" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <Button
                android:id="@+id/activity_main_facebook_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/facebook_btn"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/facebookColor"
                android:textColor="@color/whiteText"
                android:drawableStart="@drawable/facebook_icon_48"/>

            <Button
                android:id="@+id/activity_main_google_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/google_btn"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:background="@color/googlePlusColor"
                android:textColor="@color/whiteText"
                android:drawableStart="@drawable/google_plus_icon_48"/>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>